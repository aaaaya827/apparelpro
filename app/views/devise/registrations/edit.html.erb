<h2 class="account-edit">アカウント情報の編集</h2>

<%= form_with(model: resource, url: registration_path(resource_name), method: :put, html: { class: 'account-edit-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "メールアドレス", class: 'email-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>現在、確認待ちのメールアドレス: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "パスワード", class: 'newpassword-label' %> <span class="note-text">(変更したくない場合は空欄のままにしてください)</span><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em class="note-text">最低 <%= @minimum_password_length %> 文字必要です</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認", class: 'newpassword-label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード", class: 'newpassword-label' %> <span class="note-text">(変更を確認するために必要です)</span><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<div class="cancel-message">アカウントを削除しますか？ <%= button_to "アカウントを削除", registration_path(resource_name), class: "custom-button", data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" }, method: :delete %></div>

<div class="back-link">
  <%= link_to "戻る", :back %>
</div>