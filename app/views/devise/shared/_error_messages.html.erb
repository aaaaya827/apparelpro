<% if resource.errors.any? %>
  <div id="error_explanation" class="alert <%= 'user-registration-page-alert' if controller_name == 'registrations' %>" data-turbo-cache="false">
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>