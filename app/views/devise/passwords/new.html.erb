<h2 class="password-reset">パスワードをお忘れですか？</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "password-reset-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
  <%= f.label :email, "メールアドレス", class: "email-label" %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードリセット申請" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
