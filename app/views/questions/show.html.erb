<div class="container pt-5">
    <div class="row mb-3">
        <div class="col-lg-8 offset-lg-2">
            <h1 class="question-detail-title">質問詳細</h1>
            <article class="card">
                <div class="card-body">
                    <h3><%= @question.title %></h3>
                    <ul class="list-inline">
                        <li class="list-inline-item"><%= @question.created_at.strftime("%Y/%m/%d") %></li>
                    </ul>
                    <p><%= simple_format(@question.body) %></p>
                </div>
            </article>
        </div>
    </div>

    <%= render partial: 'comments/form', locals: { question: @question, comment: @comment } %>

    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <table class="table">
                <tbody id="table-comment">
                    <% if @comments.present? %>
                        <%= render @comments %>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
